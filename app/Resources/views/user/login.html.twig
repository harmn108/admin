{% extends 'base.html.twig' %}

{% block title %}Sign-in Page{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-4"></div>

            <div class="col-md-4">

                {{ form_start(form, {'attr': {'class': 'form-group m-top-20'}} ) }}

                {% block form_errors %}
                    {% spaceless %}
                        {% if errors|length > 0 %}
                            {% for error in errors %}
                                <div class="alert alert-danger">{{ error }}</div>
                            {% endfor %}
                        {% endif %}
                    {% endspaceless %}
                {% endblock form_errors %}
                {{ form_widget(form) }}
                {{ form_end(form) }}
            </div>

            <div class="col-md-4"></div>
        </div>
    </div>
{% endblock  %}